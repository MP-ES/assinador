{
    "name": "assinador.mpes",
    "version": "0.0.1",
    "description": "Assinador de Documentos do MPES",
    "main": "main.js",
    "scripts": {
        "pack": "electron-builder --dir",
        "publish": "electron-builder -p always"
    },
    "keywords": ["assinador", "mpes"],
    "author": "Rafael Bubach",
    "license": "MIT",
    "devDependencies": {
        "electron": "^5.0.1",
        "electron-builder": "^20.40.2",
        "electron-packager": "^13.1.1"
    },
    "dependencies": {
        "detect-port": "^1.3.0",
        "electron-log": "^3.0.5",
        "electron-updater": "^4.0.6",
        "lodash": "^4.17.11",
        "wait-on": "^3.2.0"
    },
    "build": {
        "appId": "br.mp.mpes.assinador",
        "productName": "Assinador MPES",
        "compression": "maximum",
        "files": ["icon.*", "*.js", "*.html", "bin"],
        "extraResources": ["bin"],
        "directories": {
            "output": "dist"
        },
        "publish": {
            "provider": "generic",
            "url": "http://127.0.0.1:19000/"
        },
        "protocols": {
            "name": "Assinador MPES",
            "schemes": ["assinador-mpes"]
        },
        "nsis": {
            "installerIcon": "icon.ico",
            "oneClick": true,
            "runAfterFinish": true,
            "language": "1046",
            "perMachine": false,
            "deleteAppDataOnUninstall": true,
            "createDesktopShortcut": true
        },
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        }
    }
}
