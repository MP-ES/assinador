{
  "name": "assinador.mpes",
  "version": "4.0.3",
  "description": "Assinador de Documentos do MPES",
  "main": "main.js",
  "author": {
    "name": "Ministério Público do Espírito Santo - MPES",
    "email": "cinf@mpes.mp.br"
  },
  "keywords": [
    "assinador",
    "mpes"
  ],
  "homepage": "https://assinador.mpes.mp.br",
  "license": "MIT",
  "scripts": {
    "preinstall": "cross-env HOME=~/.electron-gyp npm_config_target=9.0.0 npm_config_arch=x64 npm_config_target_arch=x64 npm_config_disturl=https://electronjs.org/headers npm_config_runtime=electron npm_config_build_from_source=true",
    "dist": "bpm run build && electron-builder",
    "dist:dir": "bpm run dist --dir",
    "release": "npm run build && electron-builder --x64",
    "start": "electron-webpack dev --no-sandbox",
    "build": "electron-webpack",
    "lint": "eslint ./src",
    "docker": "docker run --rm -it -v $PWD:/project -v $PWD/.cache/electron:/root/.cache/electron -v $PWD/.cache/electron-builder:/root/.cache/electron-builder --env ELECTRON_CACHE=\"/root/.cache/electron\" --env ELECTRON_BUILDER_CACHE=\"/root/.cache/electron-builder\" electronuserland/builder:wine",
    "postinstall": "cd node_modules/pkcs11js && cross-env HOME=~/.electron-gyp node-gyp configure build --target=9.0.0 --arch=x64 --dist-url=https://electronjs.org/headers"
  },
  "dependencies": {
    "asn1.js-rfc5280": "^3.0.0",
    "auto-launch": "^5.0.5",
    "electron-log": "^4.2.0",
    "graphene-pk11": "^2.1.7",
    "lodash": "^4.17.15",
    "moment": "^2.26.0",
    "source-map-support": "^0.5.19",
    "yup": "^0.29.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.6",
    "babel-eslint": "^10.1.0",
    "electron": "^9.0.0",
    "electron-builder": "^22.6.1",
    "electron-packager": "^14.2.1",
    "electron-rebuild": "^1.11.0",
    "electron-updater": "^4.3.1",
    "electron-webpack": "^2.8.2",
    "electron-webpack-eslint": "^6.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "webpack": "^4.43.0"
  }
}
